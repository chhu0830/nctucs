<% @categories.each do |c| %>
  <%= link_to c.name, category_path(c) %>
	<%= c.user.try(:name) %>
	<% if current_user == c.user or current_user.admin? %>
		<%= link_to 'delete', c, method: :delete, data: {confirm: "Are you sure?"} %>
	<% end %>
  <br />
<% end %>
<%= link_to 'New', new_category_path %>
