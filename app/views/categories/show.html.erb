<h1><%= @category.name %></h1>
<% @boards.each do |b| %>
  <%= link_to b.name, board_path(b) %>
	<% b.users.each do |viewer| %>
		<%= viewer.name %>
	<% end %>
	<% if current_user == @category.user or current_user.admin? %>
		<%= link_to 'delete', b, method: :delete, data: {confirm: "Are you sure?"}%>
	<% end %>
  <br />
<% end %>

<% if current_user == @category.user or current_user.admin? %>
	<%= link_to 'new', new_board_path(category_id: @category) %><br />
<% end %>
<%= link_to 'back', categories_path %>
