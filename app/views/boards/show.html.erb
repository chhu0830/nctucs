<h1><%= @board.name %></h1>
<% @posts.each do |p| %>
  <%= link_to p.title, post_path(p) %>
	<%= p.user.try(:name) %>
	<% if current_user == p.user or current_user.admin? %>
		<%= link_to 'delete', p, method: :delete %>
	<% end %>
  <br />
<% end %>

<%= link_to 'new post', new_post_path(board_id: @board) %><br />
<%= link_to 'back', category_path(@category) %>
